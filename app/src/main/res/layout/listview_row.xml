<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/relativelayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent" >

<ImageView
    android:background="@drawable/trending_gradient_shape"
    android:id="@+id/imagecombo"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:src="@drawable/a" />

<TextView
    android:id="@+id/textcombo"
    android:background="@drawable/trending_gradient_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/imagecombo"
    android:layout_alignTop="@id/imagecombo"
    android:layout_alignRight="@id/imagecombo"
    android:layout_margin="1dp"
    android:textStyle="bold"
    android:textSize="24dp"
    android:padding="10dp"
    android:gravity="left|center_horizontal"
    android:text="Hellogbyyggyb"
    android:textColor="@color/blue" />

    <View
        android:layout_below="@+id/imagecombo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy  "
        android:padding="5dp"
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_below="@+id/textcombo"
        android:layout_alignParentStart="true" />

    <TextView
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some text coming..... "
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
</RelativeLayout>