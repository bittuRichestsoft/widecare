<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReferEarnActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:background="@drawable/bg"
        android:id="@+id/l11"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="80dp"
            android:src="@drawable/widecareimg"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="30dp"
                android:text="Share the app "
                android:layout_marginTop="10dp"
                android:gravity="center"/>


        </LinearLayout>

        <ImageView android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/meeting"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:text="Send your referral code to your Friends and let them buy WIDECARE Plans at 30% discount on WideCare listed prices."
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/l11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/btn_inviteFriends"
            android:background="@drawable/rectangle"
android:orientation="vertical"
            android:weightSum="100">
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:textSize="14dp"
    android:textColor="@color/black"
    android:text="Share Your Invite Code"
    android:layout_weight="30"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70">
            <TextView
                android:id="@+id/tv_referCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="your Refferal Code"
                android:layout_margin="1dp"
                android:textSize="18dp"
android:gravity="center_vertical"
                android:padding="2dp"
                android:layout_weight="80"
                android:background="@color/white"></TextView>

            <ImageView
                android:id="@+id/iv_shareReferCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:padding="5dp"
android:layout_margin="2dp"                android:src="@drawable/share_option"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_inviteFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:text="Invite Friends"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>

</RelativeLayout>
