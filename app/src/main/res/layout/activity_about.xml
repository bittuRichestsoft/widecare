<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--"
    tools:context="com.example.indiaweb.myapplication.AboutActivity-->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/about"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text=""
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_below="@+id/toolbars"
        android:id="@+id/abouttexts"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="20dp"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:text="WIDECARE has been established to provide comprehensive cover for devices, personal, health, vehicle and travel protection to suit anybodyâ€™s budget. We will cover you for whole range of situations including device accidental damage, theft, warranty and  data protection, travel protection, vehicle breakdown, buyback and many more!We provide complete cover for your devices right from purchase till disposal and re-purchase of the device." />
</RelativeLayout>
