<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppInfoScreens">
<FrameLayout
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_info_img"
android:src="@drawable/app_info_slider_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom|right"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_nextAppInfoImage"
            android:layout_width="100dp"
            android:background="@color/orange"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="20dp"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:drawableRight="@drawable/arrow_side"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom|left"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_skipAppInfoImage"
            android:layout_width="100dp"
            android:background="@color/orange"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="20dp"
            android:text="SKIP"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>